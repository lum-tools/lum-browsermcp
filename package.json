{
  "name": "@lum-tools/browsermcp",
  "version": "0.2.0",
  "description": "MCP server for browser automation with lrok tunnel support - powered by lum.tools",
  "author": "lum.tools",
  "homepage": "https://lum.tools",
  "bugs": "https://github.com/lum-tools/lum-browsermcp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/lum-tools/lum-browsermcp"
  },
  "type": "module",
  "bin": {
    "lum-browsermcp": "dist/index.js",
    "mcp-server-browsermcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src/index.ts --format esm && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsup src/index.ts --format esm --watch",
    "inspector": "CLIENT_PORT=9001 SERVER_PORT=9002 pnpx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "commander": "^13.1.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.0",
    "shx": "^0.3.4",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "tunnel",
    "lrok",
    "lum.tools"
  ],
  "license": "MIT"
}
